<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_profesor"
    tools:context=".ui.activitys.maestros.perfilMaestro.MaestrosActivity">

    <TextView
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Profesores"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:src="@drawable/ic_professores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:text="Alta de Maestro"
        android:textColor="#fff"
        android:id="@+id/btn_ui_maestros_alta"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@drawable/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:text="Lista de Maestros"
        android:id="@+id/btn_ui_maestros_lista"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
