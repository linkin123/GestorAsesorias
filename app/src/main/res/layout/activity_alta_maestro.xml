<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_profesor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_cv_contact_maestro"
                android:layout_width="137dp"
                android:layout_height="137dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/profile_borde_image"
                android:padding="5dp"
                android:src="@drawable/ic_professores" />

            <ImageButton
                android:id="@+id/ib_camera_maestro"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camara" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Maestro : " />

                        <EditText
                            android:inputType="textPersonName"
                            android:id="@+id/et_alta_maestro_nombre"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domicilio : " />

                        <EditText
                            android:inputType="text"
                            android:id="@+id/et_alta_maestro_domicilio"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="telefono del maestro : " />

                        <EditText
                            android:inputType="phone"
                            android:maxLength="10"
                            android:digits="1234567890"
                            android:id="@+id/et_alta_maestro_telefono"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DescripciÃ³n : " />

                        <EditText
                            android:inputType="textAutoComplete"
                            android:id="@+id/et_alta_maestro_descripcion"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="horario"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/rg_maestro_horario"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_matutino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/news_rbtn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="bold"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Matutino"
                    android:textColor="@drawable/news_rbtn_textcolor_selector"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/rbtn_vespertino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/news_rbtn_selector_ni"
                    android:button="@null"
                    android:fontFamily="bold"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Vespertino"
                    android:textColor="@drawable/news_rbtn_textcolor_selector"
                    android:textSize="13dp" />

            </RadioGroup>


            <Button
                android:id="@+id/btn_registrar_maestro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
