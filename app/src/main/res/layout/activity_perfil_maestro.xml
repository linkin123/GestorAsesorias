<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_profesor"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_perfil_maestro"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/profile_borde_image"
        android:src="@drawable/ic_professores" />


    <TextView
        android:id="@+id/tv_perfil_maestro_nombre"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Nombre del Maestro : "
        android:textAllCaps="false"
        android:textColor="#fff" />



    <ImageView
        android:src="@drawable/ic_home_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_perfil_maestro_domicilio"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="Domicilio : "
        android:textAllCaps="false"
        android:textColor="#fff" />


    <ImageView
        android:src="@drawable/ic_phone_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_perfil_maestro_telefono"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="telefono del maestro : "
        android:textAllCaps="false"
        android:textColor="#fff" />


    <ImageView
        android:src="@drawable/ic_query_builder_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_perfil_maestro_horario"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Horario : "
        android:textAllCaps="false"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n : "
        android:textAllCaps="false"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tv_perfil_maestro_descripcion"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#fff" />


    <View
        android:background="@color/color_maestro_elementos"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_historial_maestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn"
        android:text="Historial"
        android:textAllCaps="false"
        android:textColor="#fff" />

</LinearLayout>