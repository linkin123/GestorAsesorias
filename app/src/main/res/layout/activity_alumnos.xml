<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_alumno"
    tools:context=".ui.activitys.alumnos.perfilAlumno.AlumnosActivity">


    <TextView
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Alumnos"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:src="@drawable/ic_alumnos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:text="Alta de Alumno"
        android:textColor="#fff"
        android:id="@+id/btn_ui_alumnos_alta"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@drawable/btn_alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        android:text="Lista de Alumnos"
        android:id="@+id/btn_ui_alumnos_lista"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:textAllCaps="false"
        android:text="Escanner QR"
        android:id="@+id/btn_ui_alumnos_qr"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
